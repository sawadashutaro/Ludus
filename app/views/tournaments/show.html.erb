<div class="tbody">

<p id="notice"><%= notice %></p>

 <%= attachment_image_tag @tournament, :image, :fill, 600, 400 %>

 <div>
   <p>エントリー人数</p>
   <p>
    <%= @tournament.entries.count %>
    <span>/</span>
    <%= @tournament.maximum %>
   </p>

   <!-- エントリーしていないならエントリーボタン、しているなら削除ボタンを設置 -->
   <% if @tournament.entries.where(user_id: current_user.id).exists? %>
    <%= link_to "エントリー済み", entry_path(@tournament.id), method: :delete, class:"btn btn-success" %>
   <% else %>
    <%= link_to "エントリー", entries_path(@tournament.id), method: :post, class:"btn btn-success" %>
   <% end %>
 </div>

 <h2><%= @tournament.name %></h2>


  <h3><%= @tournament.title.game %></h3>

<p>
  <strong>開催予定日時:</strong>
  <%= simple_time(@tournament.date) %>
</p>

<p>
  <strong>上限人数:</strong>
  <%= @tournament.maximum %>
  <span>人</span>
</p>

<p>
  <strong>Address:</strong>
  <%= @tournament.address %>
</p>

<p>
  <strong>詳細:</strong>
  <%= @tournament.detail %>
</p>

<p>
  <strong>User:</strong>
  <%= @tournament.user_id %>
</p>

<p>
  <strong>Is deleted:</strong>
  <%= @tournament.is_deleted %>
</p>

<p>
  <strong>Is completed:</strong>
  <%= @tournament.is_completed %>
</p>

<%= link_to 'Edit', edit_tournament_path(@tournament) %> |
<%= link_to 'Back', tournaments_path %>
</div>