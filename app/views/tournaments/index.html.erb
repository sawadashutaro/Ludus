<p id="notice"><%= notice %></p>

<h1>Tournaments</h1>

<dl class="searchbox">
  <%= search_form_for @search, url: tournaments_search_path do |f| %>
    <dt><%= f.text_field :name_or_title_game_cont ,placeholder: "大会名、ゲーム名で検索" %></dt>
    <dd><%= f.submit ("検索"), class="search-btn" %></dd>
  <% end %>
</dl>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Game</th>
      <th>Date</th>
      <th>Address</th>
      <th>Detail</th>
      <th>User</th>
      <th>Is deleted</th>
      <th>Is completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.name %></td>
        <td><%= tournament.image %></td>
        <td><%= tournament.game %></td>
        <td><%= tournament.date %></td>
        <td><%= tournament.address %></td>
        <td><%= tournament.detail %></td>
        <td><%= tournament.user_id %></td>
        <td><%= tournament.is_deleted %></td>
        <td><%= tournament.is_completed %></td>
        <td><%= link_to 'Show', tournament %></td>
        <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
        <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tournament', new_tournament_path %>
